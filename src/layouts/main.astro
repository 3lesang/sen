---
import HideOnScroll from "@/components/HideOnScroll.astro";
import Tour from "@/components/Tour";
import { Badge } from "@/components/ui/badge";
import { Button, buttonVariants } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Separator } from "@/components/ui/separator";
import { cn } from "@/lib/utils";
import "@/styles/global.css";
import "@fontsource/inter";
import LoadingIndicator from "astro-loading-indicator/component";
import { Image } from "astro:assets";
import { ClientRouter } from "astro:transitions";

import {
  ChevronDownIcon,
  HomeIcon,
  LayoutDashboardIcon,
  SearchIcon,
  ShoppingCartIcon,
  UserCircleIcon,
} from "lucide-react";

const { title } = Astro.props;
---

<html lang="en" transition:animate="none">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <ClientRouter />
    <LoadingIndicator color="#00a6f4" />
  </head>
  <body class="bg-gray-50">
    <header class="sticky top-0 z-50">
      <HideOnScroll>
        <p class="text-center bg-sky-50 text-xs text-gray-900 leading-6">
          Giao nhanh - Miễn phí cho đơn 300k
        </p>
      </HideOnScroll>
      <div class="bg-white">
        <div
          class="flex items-center justify-between md:max-w-7xl mx-auto py-2"
        >
          <nav class="hidden md:flex items-center gap-2">
            <a href="/">
              <Image
                class="select-none h-10"
                loading="eager"
                width={100}
                height={100}
                src="/logo.png"
                alt="logo"
              />
            </a>
            <Tour client:load />
            <Button variant="ghost" id="start-tour">
              <LayoutDashboardIcon />
              Danh mục
              <ChevronDownIcon />
            </Button>
          </nav>
          <div class="flex justify-center flex-1 px-2">
            <form
              action="/search"
              method="GET"
              class="w-full md:w-fit relative"
            >
              <div
                class="absolute left-0 top-1/2 -translate-y-1/2 w-12 flex justify-center text-gray-500"
              >
                <SearchIcon size={18} />
              </div>
              <Input
                type="text"
                name="q"
                placeholder="Tìm kiếm sản phẩm"
                className="w-full md:w-96 pr-10 pl-10"
              />
              <Button
                type="submit"
                variant="link"
                className="rounded-tl-none rounded-bl-none absolute right-0 top-1/2 -translate-y-1/2 text-black hover:cursor-pointer hover:no-underline"
              >
                Tìm kiếm
              </Button>
            </form>
          </div>

          <div class="hidden md:flex items-center">
            <a href="/signin" class={cn(buttonVariants({ variant: "ghost" }))}>
              <UserCircleIcon />
              Đăng nhập
            </a>
            <a
              href="/cart"
              class={cn(
                buttonVariants({ variant: "ghost", size: "icon" }),
                "relative"
              )}
            >
              <ShoppingCartIcon />
              <Badge
                variant="destructive"
                className="absolute top-0 right-0 h-4 w-4 rounded-full p-0.5 font-mono tabular-nums"
              >
                8
              </Badge>
            </a>
          </div>
        </div>
      </div>
      <Separator />
    </header>
    <div
      class="md:hidden flex items-center bg-white fixed bottom-0 w-screen z-50 p-2"
    >
      <a href="/" class={cn(buttonVariants({ variant: "ghost" }), "flex-1")}>
        <HomeIcon />
        Trang chủ</a
      >
      <a href="/" class={cn(buttonVariants({ variant: "ghost" }), "flex-1")}>
        <LayoutDashboardIcon />
        Danh mục</a
      >
      <a
        href="/signin"
        class={cn(buttonVariants({ variant: "ghost" }), "flex-1")}
      >
        <UserCircleIcon />
        Đăng nhập</a
      >
    </div>
    <main class="max-w-7xl mx-auto py-6">
      <slot />
    </main>
    <footer>
      <div class="h-96"></div>
    </footer>
  </body>
</html>
